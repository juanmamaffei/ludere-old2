<h2>Iniciar sesión</h2>
<div class="form-group">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>

<div class="form-group">
   <%= f.input :email, required: false, autofocus: true , :class=>"form-control", :placeholder=>"Correo electrónico" %> </div>
   <div class="form-group"><%= f.input :password, required: false, :class => "form-control", :placeholder=>"Contraseña" %></div>

    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
</div>

  <div class="form-actions">
    <%= f.button :submit, "Iniciar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

 