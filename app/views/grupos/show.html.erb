<p id="notice"><%= notice %></p>
 <div class="row">
      <div class="col-xs-12">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title"><%= @grupo.nombre %> -  <% if @grupo.abierto? %>
  <strong>Grupo abierto</strong>
  <% else %>
<strong>Grupo cerrado</strong>
<%end %></h2>


        </div>
<div class="panel-body">
<div class="col-xs-12 col-sm-6">
<%= image_tag @grupo.image.url(:large), :class => "img-rounded" %></div>
<div class="col-xs-12 col-sm-6">
   <p>
  <%= @grupo.descripcion %>
</p>       

</div></div></div>
<div class="row"><div class="col-xs-12">

              <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#mi">Eventos</a></li>
                <li><a data-toggle="tab" href="#mu">Muro</a></li>
                <li><a data-toggle="tab" href="#in">Integrantes</a></li>
                <li><a data-toggle="tab" href="#lo">Logros</a></li>
              </ul>

              <div class="tab-content panel">
                <div id="mi" class="tab-pane fade in active">
                    <h3>Misiones</h3>
                    <% @misiones.each do |m| %>
                    <div class="row">
                      <div class="col-xs-3 col-sm-2"><%= image_tag m.image.url(:med), :class => "img-circle img-responsive" %></div>
                      <div class="col-xs-6 col-sm-8"><%= link_to m.nombre, mision_path(m.id), :class => "h2" %><br>
                        <p><%= m.descripcion %></p>
                      </div>
                      <div class="col-xs-3 col-sm-2"><% if @eslider==true %> Quitar <%end%></div>
                    </div>
                    <% end %>
                    <% if @eslider==true %>
                      Agregar misión
                    <% end %>
                    <h3>Eventos</h3>
                </div>
                <div id="mu" class="tab-pane fade">
                  <h3>Muro</h3>
                    <%= render "posts/form"  %>
                  <% @grupo.posts.each do |post| %>
                  <div class="posteo">
                    <%= image_tag post.usuario.image.url(:med), :class => "img-circle img-responsive" %><strong><%= post.usuario.email %></strong> dijo:
                    <p>
                    <%= post.contenido %>
                    </p>
                    Denunciar | Me gusta
                  </div>
                  <% end %>
                  
                </div>
                <div id="in" class="tab-pane fade">
                  <h3>Integrantes</h3>
                    <% @integrantes.each do |i| %>
                    <div class="row">
                      <div class="col-xs-3 col-sm-2"><%= image_tag i.image.url(:med), :class => "img-circle img-responsive" %></div>
                      <div class="col-xs-6 col-sm-8"><%= link_to i.nombre, "logrosdelusuario", :class => "h2" %><br>
                        <p><%= i.nombre %></p>
                      </div>
                      <div class="col-xs-3 col-sm-2"><% @administradores.each do |a| %><% if a.id == i.id %>¡LÍDER! <%end%><%end%></div>
                    </div>
                    <% end %>
                    <% if @eslider==true %>
                      Agregar jugador
                    <% end %>
                </div>
                <div id="lo" class="tab-pane fade">
                  <h3>Logros</h3>
                    <%=   %>
                </div>
              </div>
</div>
</div>