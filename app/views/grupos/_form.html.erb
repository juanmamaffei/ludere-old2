<%= simple_form_for(@grupo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :descripcion %>
    <%= f.input :integrantes %>
    <%= f.input :misiones %>
    <%= f.input :administradores %>
    <%= f.input :abierto %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
